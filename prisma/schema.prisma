// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.text annotations in model Account below
    // Further reading: 
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
    // url      = "file:database.db"
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? //@db.Text
    refresh_token_expires_in Int
    access_token             String? //@db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? //@db.Text
    session_state            String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([provider, providerAccountId])
    @@map("accounts")
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("sessions")
}

model BankAccount {
    id String @id // account.getMetadata().id

    // account.getDetails()
    balance Float @default(0)

    resourceId  String
    iban        String
    detailsMeta Json

    // account.getMetadata()
    institutionId String

    requisitionId         String? @db.LongText // client.initSession({...}).id
    refreshToken          String? @db.LongText //@db.Text @map("refresh_token")
    refreshTokenExpiresIn Int?
    accessToken           String? @db.LongText //@db.Text 
    expiresAt             Int?

    userId String @unique
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("bank_accounts")
}

model User {
    id            String       @id @default(cuid())
    name          String?
    email         String?      @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    BankAccount   BankAccount?

    wallets              Wallet[]
    transactions         Transaction[]
    wishlists            Wishlist[]
    WishlistItem         WishlistItem[]
    RecurringTransaction RecurringTransaction[]
    Recipient            Recipient[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([identifier, token])
    @@map("verification_tokens")
}

model Recipient {
    id    String  @id @default(cuid())
    name  String?
    iban  String?
    role  String?
    image String?

    defaultTransactionType TransactionType @default(PAYMENT)

    user   User   @relation(fields: [userId], references: [id])
    userId String

    RecurringTransaction RecurringTransaction[]
    Transaction          Transaction[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index(iban)
    @@map("recipient")
}

model Category {
    id   String @id @default(cuid())
    name String

    color   String
    iconUrl String

    // user   User   @relation(fields: [userId], references: [id])
    // userId String

    WishlistItem         WishlistItem[]
    Transaction          Transaction[]
    RecurringTransaction RecurringTransaction[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("categories")
}

enum WalletType {
    MAIN
    SPENDING
    SAVINGS
    WISHLIST
    RECURRING
    BANK_SYNC
}

model Wallet {
    id   String @id @default(cuid())
    name String

    color String

    type WalletType @default(SPENDING)

    user   User   @relation(fields: [userId], references: [id])
    userId String

    Transactions         Transaction[]
    RecurringTransaction RecurringTransaction[]
    Wishlist             Wishlist[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("wallets")
}

enum TransactionType {
    PAYMENT
    INCOME
    BONUS
    // RECURRING_PAYMENT
}

enum TransactionStatus {
    PENDING
    SUCCESS

    // RECURRING_PAYMENT
    @@map("TransactionState")
}

model RecurringTransaction {
    id   String @id @default(cuid())
    name String

    amount Float

    latestOccurrence DateTime @default(now())
    deltaMonths      Int      @default(12)

    category   Category? @relation(fields: [categoryId], references: [id])
    categoryId String?

    wallet   Wallet @relation(fields: [walletId], references: [id])
    walletId String

    recipient   Recipient? @relation(fields: [recipientId], references: [id])
    recipientId String?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    Transaction Transaction[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("recurring_transactions")
}

model Transaction {
    id   String @id @default(cuid())
    name String

    amount Float

    type   TransactionType   @default(PAYMENT)
    status TransactionStatus @default(SUCCESS)

    date DateTime @default(now())

    description           String? @db.LongText
    additionalInformation String? @db.LongText
    referenceId           String? // ID received from the nordigenClient

    category   Category? @relation(fields: [categoryId], references: [id])
    categoryId String?

    wallet   Wallet @relation(fields: [walletId], references: [id])
    walletId String

    recipient   Recipient? @relation(fields: [recipientId], references: [id])
    recipientId String?

    queuedBy   RecurringTransaction? @relation(fields: [queuedById], references: [id])
    queuedById String?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("transactions")
}

model Wishlist {
    id   String @id @default(cuid())
    name String

    user   User   @relation(fields: [userId], references: [id])
    userId String

    WishlistItems WishlistItem[]
    Wallet        Wallet         @relation(fields: [walletId], references: [id])
    walletId      String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("wishlists")
}

model WishlistItem {
    id   String @id @default(cuid())
    name String

    category   Category? @relation(fields: [categoryId], references: [id])
    categoryId String?

    wishlist   Wishlist @relation(fields: [wishlistId], references: [id])
    wishlistId String

    user   User   @relation(fields: [userId], references: [id])
    userId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("wishlist_items")
}
